<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fongwama.mosungi">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorPortrait"
            android:configChanges="orientation"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.ConnexionActivity"
            android:label="@string/title_activity_connexion"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activity.InscriptionActivity"
            android:label="@string/title_activity_inscription"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activity.HomeActivity"
            android:label="@string/title_activity_accueil"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activity.AddPatientActivity"
            android:label="@string/title_activity_add_patient"
            android:theme="@style/AppTheme"
            android:screenOrientation="sensorPortrait"
            android:configChanges="orientation"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".ui.activity.AddAgendaActivity"
            android:label="@string/title_activity_add_agenda"
            android:screenOrientation="sensorPortrait"
            android:configChanges="orientation"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity"
            />
    </application>

</manifest>